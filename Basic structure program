#include <iostream>
using namespace std;
struct Student {
    int rollNo;
    string name;
    float marks;
};
int main() {
    Student s1;
    cout << "Enter roll no: ";
    cin >> s1.rollNo;
    cout << "Enter name: ";
    cin >> s1.name;
    cout << "Enter marks: ";
    cin >> s1.marks;
    cout << "\nStudent Details:" << endl;
    cout << "Roll No: " << s1.rollNo << endl;
    cout << "Name: " << s1.name << endl;
    cout << "Marks: " << s1.marks << endl;
    return 0;
}
